<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_8dp">

    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/border_image"
        tools:src="@tools:sample/avatars"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTemperature"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="28°C"
            android:textColor="@android:color/holo_green_light"
            android:textSize="50sp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/padding_8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTemperatureMax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginStart="@dimen/padding_16dp"
                android:text="32°"
                android:textColor="@android:color/holo_green_light"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text=" / "
                android:textColor="@android:color/holo_green_light"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvTemperatureMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="27°"
                android:textColor="@android:color/holo_green_light"
                android:textSize="24sp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_8dp"
        android:text="Th 6, 18 tháng 8 "
        android:textColor="@android:color/tertiary_text_light" />

    <TextView
        android:id="@+id/tvCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_8dp"
        android:text="Cầu Giấy"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvStatusSky"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_8dp"
        android:text="Nhiều mây"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_8dp"
        android:maxLines="3"
        android:minLines="2"
        android:text="Hôm nay - Nhiều mây . Cao 32°C, thấp 27°C. Gió nam - tây nam, tốc độ 10km/h. Khả năng mưa 45%"
        android:textColor="@android:color/tertiary_text_light" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rVStatusHour"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="@dimen/padding_8dp"
        android:orientation="horizontal" />

</LinearLayout>
